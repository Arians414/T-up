{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@design/*": [
        "design/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@copy/*": [
        "copy/*"
      ],
      "@docs/*": [
        "docs/*"
      ],
      "@schemas/*": [
        "schemas/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "app",
    "src",
    "index.ts"
  ]
}
